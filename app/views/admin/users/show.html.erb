<% provide :title, t("admin.titles.manage_user") %>
<div class="row">
  <div class="col-md-12 col-md-offset-0">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <span class="navbar-brand active"><%= @user.email %></span>
        </div>
        <div class="collapse navbar-collapse">
          <div class="navbar-form navbar-left">
            <%= search_form_for @q, url: admin_user_path,
              html: {method: :get} do |f| %>
              <div class="form-group">
                <%= f.search_field :subject_name_cont, class: "form-control",
                  placeholder: t("admin.user.placeholder") %>
              </div>
              <%= f.submit t("questions.search"), class: "btn btn-default" %>
            <% end %>
          </div>
          <%= render partial: "filter_exam_as_state" %>
        </div>
      </div>
    </nav>

    <table class="table">
      <thead>
        <tr>
          <th style="width: 10%;"><%= t "admin.user.exam_stt" %></th>
          <th style="width: 40%;"><%= t "admin.user.exam_subject" %></th>
          <th style="width: 30%;"><%= t "admin.user.exam_create_at" %></th>
          <th style="width: 10%;"><%= t "admin.user.exam_state" %></th>
          <th style="width: 10%;"><%= t "admin.user.exam_detail" %></th>
        </tr>
      </thead>
      <tbody>
        <% @exams.each_with_index do |exam, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= exam.subject.name %></td>
            <td><%= l exam.created_at, format: :define %></td>
            <td><span class="label label-info"><%= exam.status %></span></td>
            <td><%= link_to t("admin.user.exam_detail"), admin_exam_path(exam),
              class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
